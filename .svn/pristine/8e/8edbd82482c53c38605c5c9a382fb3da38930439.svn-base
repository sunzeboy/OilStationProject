<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_lbs_map_head_action_bar_bg" >

        <TextView
            style="@style/CommonTitleNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/lbs_settings_oli_type" />

        <ImageButton
            android:id="@+id/btn_lbs_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_btn_action_bar_back" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/lbs_settings_item_height"
        android:gravity="center"
        android:text="@string/lbs_settings_oli_type_prompt"
        android:textColor="@color/frenchgrey"
        android:textSize="@dimen/lbs_settings_item_font_size" />

    <View style="@style/LbsSettingsViewLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lbs_settings_item_height" >

        <TextView
            android:id="@+id/tv_settings_oli_type_92"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/lbs_settings_oli_type_92"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_settings_oli_type_92"
            android:text="@string/lbs_settings_oli_type_gasoline"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <CheckBox
            android:id="@+id/cb_settings_oli_type_92"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/selector_cb_lbs_button" />
    </RelativeLayout>

    <View style="@style/LbsSettingsViewLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lbs_settings_item_height" >

        <TextView
            android:id="@+id/tv_settings_oli_type_95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/lbs_settings_oli_type_95"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_settings_oli_type_95"
            android:layout_alignBottom="@+id/tv_settings_oli_type_95"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_settings_oli_type_95"
            android:text="@string/lbs_settings_oli_type_gasoline"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <CheckBox
            android:id="@+id/cb_settings_oli_type_95"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/selector_cb_lbs_button" />
    </RelativeLayout>

    <View style="@style/LbsSettingsViewLineStyle" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lbs_settings_item_height" >

        <TextView
            android:id="@+id/tv_settings_oli_type_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/lbs_settings_oli_type_0"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_settings_oli_type_0"
            android:layout_alignBottom="@+id/tv_settings_oli_type_0"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/tv_settings_oli_type_0"
            android:text="@string/lbs_settings_oli_type_diesel"
            android:textSize="@dimen/lbs_settings_item_font_size" />

        <CheckBox
            android:id="@+id/cb_settings_oli_type_0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:button="@drawable/selector_cb_lbs_button" />
    </RelativeLayout>

    <View style="@style/LbsSettingsViewLineStyle" />

</LinearLayout>